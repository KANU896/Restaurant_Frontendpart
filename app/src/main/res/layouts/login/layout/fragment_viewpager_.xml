<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:gravity="center|top"
    android:paddingTop="13dp"
    tools:context=".Main_Screen.Viewpager_Fragment.Recommend_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:background="#C4E8E5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_text"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="132dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="378dp"
                android:gravity="center"
                android:text="위치 설정이 필요합니다."
                android:textSize="20dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/viewpager_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/viewpager_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/viewpager_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>