<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4E8E5"
    tools:context=".Main_Screen.Viewpager_Fragment.Food_recommend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="378dp"
            android:gravity="center"
            android:text="위치 설정이 필요합니다."
            android:textSize="30dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/viewpager_image"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/viewpager_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewpager_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="30dp" />

    </LinearLayout>

</RelativeLayout>